
<hibernate-configuration>
<session-factory>
<property name="hibernate.dialect">org.hibernate.community.dialect.SQLiteDialect</property>
<property name="hibernate.connection.driver_class">org.sqlite.JDBC</property>
<property name="hibernate.connection.url">jdbc:sqlite:src/main/resources/Deck_Constructor.db</property>
<property name="hibernate.connection.pool_size">50</property>
<property name="show_sql">true</property>
<property name="hibernate.format_sql">true</property>
<property name="hibernate.use_sql_comments">true</property>
<property name="hibernate.hbm2ddl.auto">create</property>
<mapping class="com.dam.Deck_Constructor_TFG.Modelo.Usuario"/>
<mapping class="com.dam.Deck_Constructor_TFG.Modelo.Favoritos"/>
<mapping class="com.dam.Deck_Constructor_TFG.Modelo.Carta"/>
<mapping class="com.dam.Deck_Constructor_TFG.Modelo.Deck"/>
<mapping class="com.dam.Deck_Constructor_TFG.Modelo.Amigo"/>

</session-factory>
</hibernate-configuration>